<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<loflazyload>
			<general>
				<enable>1</enable>
				<loadingIcon>default/AjaxLoader.gif</loadingIcon>
				<threshold>500</threshold>
				<delay>-1</delay>
				<combined>0</combined>
				<effect>show</effect>
				<effectTime>0</effectTime>
				<enableThrottle>1</enableThrottle>
				<throttle>250</throttle>
				<enable_homepage>1</enable_homepage>
				<enable_categorypage>1</enable_categorypage>
				<enable_searchpage>1</enable_searchpage>
				<enable_cartpage>1</enable_cartpage>
			</general>
		</loflazyload>
	</default>
</config>